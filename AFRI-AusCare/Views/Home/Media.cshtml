@model IEnumerable<AFRI_AusCare.Models.Media>

<!-- breadcam_area_start -->
<div class="slider_area slider_bg_1 d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="single_slider">
                    <div class="slider_text">
                        <h3>Media</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- volunteers_area_satrt -->
<div class="volunteers_area">
    <div class="container">
        <div class="col-xl-12 col-md-12">
            <div class="causes_info">
                <div class="section_title text-center">
                    <h3>
                        Media Spotlight: Inspiring Stories of Change
                    </h3>
                </div>
                <p>
                    @*
                    <p>
                    We are building a future where services will acknowledge and are sensitive to African and culturally and linguistically diverse (CALD) people´s perception of mental health.
                    </p>*@
            </div>
        </div>
        <div class="row" style="margin-top:7rem;">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-5">
                    <div class="owl-item active">
                        <div class="single_help_wrap">
                            <div class="thumb">
                                <a href="@item.MediaURL" title=""><img src="@item.ImageUrl" alt="" class="mediaImages"></a>
                            </div>
                            <div class="help_content">
                                <h3>@item.Title</h3>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
<!-- volunteers_area_end -->