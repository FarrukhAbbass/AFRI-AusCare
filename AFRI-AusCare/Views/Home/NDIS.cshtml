@model IEnumerable<AFRI_AusCare.Models.Service>


<!-- breadcam_area_start -->
<div class="breadcam_area bradcam_bg">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="breadcam_text">
                    <h3>NDIS</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->
<!-- causes_area_start -->
<div class="causes_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-6 col-md-6">
                <div class="causes_info">
                    <div class="section_title">
                        <h3>
                            CULTURALLY APPROPRIATE NDIS SERVICES
                        </h3>
                    </div>
                    <p style="text-align:justify">
                        We provide culturally appropriate and safe services.
                        People with mental health disabilities from African Australian backgrounds and other culturally and linguistically
                        diverse (CALD) backgrounds deserve culturally appropriate and safe services.
                        Afri-Aus Care works to fill this gap by providing services to match our participants’ cultural and linguistic background.
                        Our Ubuntu Model of Care assists African-Australian community members with support that they can identify with and is meaningful to them.
                    </p>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="causes_thumb">
                    <img class="img-fluid" src="~/img/ndis.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- causes_area_end -->
<!-- volunteers_area_satrt -->
<div class="volunteers_area">
    <div class="container">
        <div class="col-xl-12 col-md-12">
            <div class="causes_info">
                <div class="section_title text-center">
                    <h3>
                        Services: We Provide
                    </h3>
                </div>
                <p>
                    @*
                    <p>
                    We are building a future where services will acknowledge and are sensitive to African and culturally and linguistically diverse (CALD) people´s perception of mental health.
                    </p>*@
            </div>
        </div>
        <div class="row" style="margin-top:7rem;">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-5">
                    <div class="owl-item active">
                        <div class="single_help_wrap">
                            <div style="display: flex;justify-content: space-between;">
                                <div>
                                    <h3>@item.Title</h3>
                                </div>
                                <div>
                                    <a collapsed" data-toggle="collapse" href="#@item.Id" role="button" aria-expanded="false" aria-controls="@item.Id">
                                        <i class="fa fa-plus" style="font-size:18px;"></i>
                                    </a>
                                </div>
                            </div>
                            <hr />
                            <div class="collapse" id="@item.Id">
                                <div class="card card-body">
                                    <p>@item.Description</p>
                                </div>
                            </div>
                            <div class="thumb">
                                <img src="@item.ImageUrl" alt="" class="mediaImages" />
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
<!-- volunteers_area_end -->