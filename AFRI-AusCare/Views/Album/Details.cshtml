@model AFRI_AusCare.Models.Album

@{
    ViewData["Title"] = "View Album";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">
    <div class="col-md-8 offset-md-2 mt-3">
        <div class="row">
            <div class="col-md-6">
                <h3>@Model.Title</h3>
                <h5>@Model.CreatedDate.Value.ToString("dd-MM-yyyy")</h5>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-12">
                <h4>Images</h4>

                <div class="row">
                    @foreach (var gallery in Model.Galleries)
                    {
                        <div class="col-md-3">
                            <a href="@Url.Content(gallery.ImageUrl)" data-fancybox="gallery">
                                <img src="@Url.Content(gallery.ImageUrl)" alt="@gallery.Title" class="image-size">
                            </a>
                        </div>
                    }
                </div>
                <div class="row">
                    <a class="pt-3" asp-action="Index">Back To List</a>
                </div>
            </div>
        </div>
    </div>
</div>